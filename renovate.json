{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": ["main", "release-3.6", "release-3.7"],
  "nix": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "Only allow patch updates on release branches",
      "matchBaseBranches": ["release-3.6", "release-3.7"],
      "matchUpdateTypes": ["major", "minor"],
      "enabled": false
    },
    {
      "description": "Use conservative lock file updates on release branches",
      "matchBaseBranches": ["release-3.6", "release-3.7"],
      "rangeStrategy": "in-range-only"
    }
  ],
  "postUpdateOptions": ["yarnDedupeFewer"],
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
